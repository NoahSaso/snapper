{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "declaration": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "module": "commonjs",
    "outDir": "dist",
    "target": "es2020",
    "strict": true,
    "baseUrl": "src",
    "skipLibCheck": true,
    "jsx": "preserve",
    "paths": { "@/*": ["*"] },
  },
  "include": ["src/**/*", "vitest.config.mts"],
}
